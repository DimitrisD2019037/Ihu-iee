//St?? p??ta D d??eta? ? a????? t?µ? 00001111
                     
while(TRUE) {                   
//?????? p?? de? te?e???e? p?t?
      while(input(PIN_B4) == 1) {   
          // ??aµ??? ??? ?t?? pat??e? t? µp??t??
      }        
      delay_ms(50);     
      // ?a??st???s? 50 ms ??a ap?f??? fa???µe??? a?ap?d?se??
     
